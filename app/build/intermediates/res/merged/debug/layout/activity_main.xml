<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:orientation="vertical" >
	<LinearLayout
		android:id="@+id/layout_sensor"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="20dp"
		android:orientation="vertical"
		android:background="#5050FF">

	<LinearLayout style="?android:buttonBarStyle"
		android:id="@+id/top_layout"
		android:layout_width="match_parent"
		android:layout_height="40sp"
		android:layout_margin="2dp"
		android:orientation="horizontal"
		android:background="#6CC0B1">
		<Button style="?android:buttonBarButtonStyle"
			android:id="@+id/btBack"
			android:textColor="#6CC0B1"
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textStyle="bold"
			android:text="@string/back" />
		<Button style="?android:buttonBarButtonStyle"
			android:id="@+id/btForward"
			android:textColor="#6CC0B1"
			android:layout_width="40sp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textStyle="bold"
			android:text="@string/forward" />
		<EditText
			android:id="@+id/edtUrl"
			android:hint="@string/url"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:fontFamily="sans-serif-medium"
			android:singleLine="true"
			android:lines="1"
			android:textStyle="normal"
			android:layout_gravity="center"
			android:layout_weight="0.06" />

	</LinearLayout>
		<WebView
			android:id="@+id/wvAnimation"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.89"
			/>

	<LinearLayout style="?android:buttonBarStyle"
		android:id="@+id/button_layout"
		android:layout_width="match_parent"
		android:layout_height="40sp"
		android:layout_margin="2dp"
		android:orientation="horizontal"
		android:background="#6CC0B1">

		<Button style="?android:buttonBarButtonStyle"
			android:id="@+id/btTimeInterval"
			android:textColor="#6CC0B1"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textStyle="bold"
			android:text="Start" />
		<Button style="?android:buttonBarButtonStyle"
			android:id="@+id/btDisplacement"
			android:textColor="#6CC0B1"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textStyle="bold"
			android:text="D" />
		<Button style="?android:buttonBarButtonStyle"
			android:id="@+id/btAcceleration"
			android:textColor="#6CC0B1"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textStyle="bold"
			android:text="A" />

		<Button style="?android:buttonBarButtonStyle"
			android:id="@+id/btReset"
			android:textColor="#6CC0B1"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textStyle="bold"
			android:text="Reset" />
	</LinearLayout>
	</LinearLayout>
</FrameLayout>

