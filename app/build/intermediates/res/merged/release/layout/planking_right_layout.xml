<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/layout_sensor"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="0dp"
		android:paddingRight="0dp"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:background="#004D7F">

	<LinearLayout style="?android:buttonBarStyle"
		android:id="@+id/top_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:orientation="vertical"
		android:gravity="center_horizontal"
		android:background="#004D7F">
		<TextView
			android:id="@+id/txtTitle"
			android:textColor="#FFFFFF"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="30sp"
			android:fontFamily="sans-serif-medium"
			android:lines="1"
			android:text="@string/planking_title"
			android:layout_gravity="center"
			android:gravity="center"
			android:layout_weight="0.06" />
	</LinearLayout>

	<TextView
		android:layout_width="50dp"
		android:layout_height="30dp" />
	<!--WebView
		android:id="@+id/wvAnimation"
		android:layout_width="10dp"
		android:layout_height="10dp"
		android:background="#004D7F"
		/-->

	<LinearLayout style="?android:buttonBarStyle"
		android:id="@+id/timer_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:background="#004D7F">
		<TextView
			android:id="@+id/txtTimer"
			android:textColor="@drawable/button_text_color"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0.89"
			android:textSize="50sp"
			android:fontFamily="sans-serif-light"
			android:lines="1"
			android:text="@string/default_timer"
			android:orientation="vertical"
			android:layout_gravity="center"
			android:gravity="center"
			android:background="@drawable/circle"/>
		<TextView
			android:layout_width="50dp"
			android:layout_height="10dp" />
		<TextView
			android:id="@+id/message"
			android:textColor="#FFFFFF"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.89"
			android:textSize="16sp"
			android:fontFamily="sans-serif"
			android:lines="1"
			android:textStyle="normal"
			android:orientation="vertical"
			android:layout_gravity="center"
			android:gravity="center"/>
	</LinearLayout>

	<TextView
		android:layout_width="50dp"
		android:layout_height="10dp" />

	<LinearLayout style="?android:buttonBarStyle"
		android:id="@+id/button_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:orientation="vertical"
		android:background="#004D7F">

		<Button style="?android:buttonBarButtonStyle"
			android:id="@+id/btCalibrating"
			android:textColor="@drawable/button_text_color"
			android:layout_width="200dp"
			android:layout_weight="1"
			android:layout_height="50dp"
			android:layout_gravity="center"
			android:textStyle="normal"
			android:textSize="22sp"
			android:text="Calibrate"
			android:background="@drawable/round_button_normal"/>

		<TextView
			android:layout_width="50dp"
			android:layout_height="20dp" />

		<Button style="?android:buttonBarButtonStyle"
			android:id="@+id/btPlanking"
			android:textColor="@drawable/button_text_color"
			android:layout_width="200dp"
			android:layout_weight="1"
			android:layout_height="50dp"
			android:layout_gravity="center"
			android:textStyle="normal"
			android:textSize="22sp"
			android:text="Start Plank"
			android:background="@drawable/round_button_normal"/>
	</LinearLayout>

	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:src="@drawable/plank"
		android:layout_marginBottom="20dp"/>

</LinearLayout>


