<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/layout_sensor"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="0dp"
		android:paddingRight="0dp"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:background="#004D7F">

	<LinearLayout style="?android:buttonBarStyle"
		android:id="@+id/top_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:orientation="vertical"
		android:gravity="center_horizontal"
		android:background="#004D7F">

		<TextView
			android:id="@+id/txtTitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="0.06"
			android:fontFamily="sans-serif"
			android:gravity="center"
			android:lines="1"
			android:text="@string/planking_title"
			android:textColor="#FFFFFF"
			android:textSize="20sp"
			android:layout_marginTop="5dp"/>
	</LinearLayout>

	<TextView
		android:layout_width="50dp"
		android:layout_height="90dp" />
	<!--WebView
		android:id="@+id/wvAnimation"
		android:layout_width="10dp"
		android:layout_height="10dp"
		android:background="#004D7F"
		/-->

	<LinearLayout style="?android:buttonBarStyle"
		android:id="@+id/timer_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:background="#004D7F">

		<TextView
			android:id="@+id/txtTimer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="0.89"
			android:fontFamily="sans-serif"
			android:gravity="center"
			android:lines="1"
			android:orientation="vertical"
			android:text="@string/default_timer"
			android:textColor="@drawable/button_text_color"
			android:textSize="70sp" />
		<TextView
			android:id="@+id/message"
			android:textColor="#FFFFFF"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.89"
			android:textSize="16sp"
			android:fontFamily="sans-serif"
			android:lines="1"
			android:textStyle="normal"
			android:orientation="vertical"
			android:layout_gravity="center"
			android:gravity="center"/>
	</LinearLayout>

	<TextView
		android:layout_width="50dp"
		android:layout_height="55dp" />

	<LinearLayout style="?android:buttonBarStyle"
		android:id="@+id/button_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:orientation="vertical"
		android:background="#004D7F">

		<!--
		<Button
			android:id="@+id/btCalibrating"
			style="?android:buttonBarButtonStyle"
			android:layout_width="200dp"
			android:layout_height="50dp"
			android:layout_gravity="center"
			android:layout_weight="1"
			android:background="@drawable/round_button_normal"
			android:text="Calibrate"
			android:textColor="@drawable/button_text_color"
			android:textSize="22sp"
			android:textStyle="normal" />
		-->

		<TextView
			android:layout_width="50dp"
			android:layout_height="20dp" />

		<Button
			android:id="@+id/btPlanking"
			style="?android:buttonBarButtonStyle"
			android:layout_width="200dp"
			android:layout_height="50dp"
			android:layout_gravity="center"
			android:layout_weight="1"
			android:background="@drawable/round_button_normal"
			android:text="Begin Plank"
			android:textColor="@drawable/button_text_color"
			android:textSize="22sp"
			android:textStyle="normal" />
	</LinearLayout>

	<TextView
		android:layout_width="50dp"
		android:layout_height="60dp" />

	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_marginBottom="20dp"
		android:src="@drawable/plank" />

</LinearLayout>


